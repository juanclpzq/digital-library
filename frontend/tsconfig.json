{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2022",
    "useDefineForClassFields": true,
    "lib": ["ES2022", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",
    "noEmit": true,

    /* JSX Configuration - CORREGIDO */
    "jsx": "react-jsx",
    "jsxImportSource": "react",

    /* CORREGIDO: Deshabilitar verbatimModuleSyntax para compatibilidad con React */
    "verbatimModuleSyntax": false,

    /* Path mapping for imports */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/types/*": ["./src/types/*"],
      "@/api/*": ["./src/api/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/plugins/*": ["./src/plugins/*"]
    },

    /* Module imports - AÃ‘ADIDO para compatibilidad */
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Linting - AJUSTADO para desarrollo */
    "strict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noFallthroughCasesInSwitch": true,

    /* CORREGIDO: Deshabilitar para compatibilidad con plugins */
    "noUncheckedSideEffectImports": false,
    "exactOptionalPropertyTypes": false,

    /* Type checking - MEJORADO */
    "noImplicitAny": false,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitOverride": true,

    /* AGREGADO: Para resolver mejor las exportaciones */
    "isolatedModules": true,
    "resolveJsonModule": true
  },
  "include": ["src/**/*", "src/**/*.ts", "src/**/*.tsx", "src/plugins/**/*"],
  "exclude": ["node_modules", "dist", "build"]
}
